pipeline {
    agent any
    parameters {
        string(name: 'GIT_REPO', defaultValue: 'https://github.com/yourusername/yourrepo.git', description: 'Git Repository URL')
        string(name: 'GIT_BRANCH', defaultValue: 'main', description: 'Branch to build')
        string(name: 'BUILD_TOOL', defaultValue: 'maven', description: 'Build Tool (maven/gradle)')
        string(name: 'NAMESPACE', defaultValue: 'yournamespace', description: 'Namespace to deploy to')
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        githubProjectProperty(
            displayName: '',
            projectUrlStr: '${params.GIT_REPO}'
        )
    }
    def job_name = "${env.JOB_NAME.split('/')[-1]}"
    def commit_hash = "${env.GIT_COMMIT.substring(0, 7)}"
    def build_number = "${env.BUILD_NUMBER}"
    def docker_image = "${job_name}:${commit_hash}-${build_number}"
    stages {
        stage('Checkout') {
            steps {
                script {
                    git (url: "${params.GIT_REPO}", branch: "${params.GIT_BRANCH}")
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    if (params.BUILD_TOOL == 'maven') {
                        sh 'mvn clean package -DskipTests'
                        archiveArtifacts 'target/*.jar'
                    } else if (params.BUILD_TOOL == 'gradle') {
                        sh 'gradle clean build'
                        archiveArtifacts 'build/libs/*.jar'
                    } else {
                        error 'Invalid build tool specified'
                    }
                }
            }
        }
        stage('Create Docker Image') {
            steps {
                script {
                    if (!fileExists('Dockerfile')) {
                        writeFile(file: 'Dockerfile', text: '''
                        FROM openjdk:17-jdk-slim
                        WORKDIR /app
                        COPY ${params.BUILD_TOOL == 'maven' ? 'target/*.jar' : 'build/libs/*.jar'} app.jar
                        ENTRYPOINT ["java", "-jar", "app.jar"]
                        ''')
                    } else {
                        echo 'Dockerfile already exists'
                    }
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${docker_image} ."
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    sh "docker push ${docker_image}"
                }
            }
        }
        stage('Helm Deploy') {
            steps {
                script {
                    sh "helm upgrade --install ${job_name} ./helm-chart --namespace ${params.NAMESPACE} --set image.tag=${docker_image}"
                }
            }
        }
    }
}
